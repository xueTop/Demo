<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_recommend1_relativeLayout"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_recommend1_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:src="@drawable/finding_title_tag"/>

        <TextView
            android:id="@+id/item_recommend1_textViewOutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/item_recommend1_imageView"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="加载中"/>

        <comm.mobile.demo.widget.MyRadioButton
            android:layout_alignParentRight="true"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            app:drawableSize="20dp"
            android:textColor="#BBBBBB"
            android:layout_marginRight="15dp"
            app:drawableBottom="@drawable/ic_more_normal"
            android:text="更多"/>

    </RelativeLayout>

   <LinearLayout
       android:layout_below="@id/item_recommend1_relativeLayout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_centerHorizontal="true"
               android:id="@+id/item_recommend1_coverMiddle"
               android:layout_width="wrap_content"
               android:src="@drawable/myspin_image_default_album_s"
               android:layout_height="wrap_content" />
           
           <TextView
               android:id="@+id/item_recommend1_trackTitle"
               android:layout_width="wrap_content"
               android:layout_below="@id/item_recommend1_coverMiddle"
               android:text="haha"
               android:textSize="18sp"
               android:layout_marginLeft="5dp"
               android:layout_height="wrap_content" />

           <ImageView
               android:id="@+id/image"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:scaleX="0.6"
               android:scaleY="0.6"
               android:src="@drawable/myspin_nav_icon_album_nor"
               android:layout_below="@id/item_recommend1_trackTitle"/>

           <TextView
               android:id="@+id/item_recommend1_title"
               android:layout_width="wrap_content"
               android:text="hah"
               android:layout_alignTop="@+id/image"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/image"/>


       </RelativeLayout>

       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_centerHorizontal="true"
               android:id="@+id/item_recommend1_coverMiddle1"
               android:layout_width="wrap_content"
               android:src="@drawable/myspin_image_default_album_s"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/item_recommend1_trackTitle1"
               android:layout_width="wrap_content"
               android:layout_below="@id/item_recommend1_coverMiddle1"
               android:text="haha"
               android:textSize="18sp"
               android:layout_marginLeft="5dp"
               android:layout_height="wrap_content" />

           <ImageView
               android:id="@+id/image1"
               android:layout_width="wrap_content"
               android:scaleX="0.6"
               android:scaleY="0.6"
               android:layout_height="wrap_content"
               android:src="@drawable/myspin_nav_icon_album_nor"
               android:layout_below="@id/item_recommend1_trackTitle1"/>

           <TextView
               android:id="@+id/item_recommend1_title1"
               android:layout_width="wrap_content"
               android:text="hah"
               android:layout_alignTop="@+id/image1"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/image1"/>


       </RelativeLayout>

       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/item_recommend1_coverMiddle2"
               android:layout_width="wrap_content"
               android:layout_centerHorizontal="true"
               android:src="@drawable/myspin_image_default_album_s"
               android:layout_height="wrap_content" />

           <TextView
               android:id="@+id/item_recommend1_trackTitle2"
               android:layout_width="wrap_content"
               android:layout_below="@id/item_recommend1_coverMiddle2"
               android:text="haha"
               android:textSize="18sp"
               android:layout_marginLeft="5dp"
               android:layout_height="wrap_content" />

           <ImageView
               android:id="@+id/image2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:scaleX="0.6"
               android:scaleY="0.6"
               android:src="@drawable/myspin_nav_icon_album_nor"
               android:layout_below="@id/item_recommend1_trackTitle2"/>

           <TextView
               android:id="@+id/item_recommend1_title2"
               android:layout_width="wrap_content"
               android:text="hah"
               android:layout_alignTop="@+id/image2"
               android:gravity="center"
               android:layout_marginTop="10dp"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@id/image2"/>
       </RelativeLayout>
   </LinearLayout>
</RelativeLayout>